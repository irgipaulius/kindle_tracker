{
  "name": "kindle-tracker",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev": "concurrently -n server,client -c blue,green \"npm run dev --workspace server\" \"npm run dev --workspace client\"",
    "build:all": "npm run build --workspace client",
    "build": "npm run build:all",
    "serve:backend": "npm run start --workspace server",
    "serve:frontend": "npm run preview --workspace client"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
